{
	"name": "storystore_client",
	"version": "1.0.0",
	"description": "Client-side for Storystore",
	"author": "Adiv Ohayon",
	"private": true,
	"scripts": {
		"dev": "nuxt",
		"build": "cross-env NODE_ENV=production nuxt build",
		"start": "nuxt start",
		"deploy": "$(npm bin)/pm2 deploy package.json production",
		"generate": "nuxt generate",
		"lint": "eslint --ext .js,.vue --ignore-path .gitignore .",
		"lintFix": "eslint --fix --ext .js,.vue --ignore-path .gitignore .",
		"precommit": "npm run lint",
		"server": "npm run build && node server/server.js",
		"deploy:sls": "npm run build && sls deploy --region us-east-1",
		"deploy:static": "aws s3 cp ./client/static/ s3://cdn.shop-together.io --recursive --exclude \".DS_Store\"",
		"sls:offline": "npm run build && sls offline start",
		"svg": "vsvg -s ./svgs -t ./client/icons --es6",
		"docker:login": "$(aws ecr get-login --no-include-email --region us-east-1)",
		"docker:build": "npm run build && docker build -t store .",
		"docker:tag": "docker tag store:latest 448091079683.dkr.ecr.us-east-1.amazonaws.com/storystore:store",
		"docker:push": "docker push 448091079683.dkr.ecr.us-east-1.amazonaws.com/storystore:store",
		"docker:deploy": "npm run docker:build && npm run docker:tag && npm run docker:push"
	},
	"dependencies": {
		"@nuxtjs/axios": "^5.3.6",
		"@nuxtjs/google-tag-manager": "^2.1.4",
		"aws-sdk": "^2.395.0",
		"cross-env": "^5.2.0",
		"css-scroll-snap-polyfill": "^0.1.2",
		"dotenv": "^6.2.0",
		"express": "^4.16.4",
		"googleapis": "^36.0.0",
		"lodash.debounce": "^4.0.8",
		"lodash.defer": "^4.1.0",
		"lodash.get": "^4.4.2",
		"lodash.isempty": "^4.4.0",
		"lodash.orderby": "^4.6.0",
		"lodash.throttle": "^4.1.1",
		"nodemailer": "^5.1.1",
		"nuxt": "^2.3.1",
		"nuxt-polyfill": "^1.0.3",
		"nuxt-sass-resources-loader": "^2.0.5",
		"pm2": "^3.2.9",
		"redirect-ssl": "^1.4.0",
		"scroll-snap": "^1.0.6",
		"serverless-apigw-binary": "^0.4.4",
		"serverless-http": "^1.8.0",
		"smoothscroll-polyfill": "^0.4.4",
		"swiper": "^4.4.6",
		"v-selectmenu": "^1.0.7",
		"vue-carousel": "^0.18.0",
		"vue-fullpage.js": "^0.1.1",
		"vue-l-carousel": "^1.1.0",
		"vue-scrollto": "^2.13.0",
		"vue-svgicon": "^3.2.2",
		"vue-video-player": "^5.0.2",
		"vue2-touch-events": "^1.1.1",
		"vuelidate": "^0.7.4",
		"vuex-persist": "^2.0.0"
	},
	"devDependencies": {
		"@babel/core": "^7.3.3",
		"@babel/node": "^7.2.2",
		"args": "^5.0.0",
		"babel-eslint": "^8.2.1",
		"eslint": "^5.0.1",
		"eslint-config-prettier": "^3.3.0",
		"eslint-loader": "^2.0.0",
		"eslint-plugin-prettier": "2.6.2",
		"eslint-plugin-vue": "^4.0.0",
		"event-stream": "^3.3.4",
		"fs": "0.0.1-security",
		"node-sass": "^4.10.0",
		"nodemon": "^1.11.0",
		"path": "^0.12.7",
		"prettier": "^1.16.4",
		"sass-loader": "^7.1.0",
		"serverless-domain-manager": "^2.6.6",
		"serverless-offline": "^3.31.3"
	},
	"apps": [
		{
			"name": "store",
			"script": "server/server.js",
			"env_production": {
				"NODE_ENV": "production",
				"AWS_REGION": "us-east-1",
				"PORT": "443"
			}
		}
	],
	"deploy": {
		"production": {
			"env": {
				"NODE_ENV": "production"
			},
			"user": "ubuntu",
			"host": "storystore",
			"ref": "origin/checkout",
			"repo": "git@github.com:adivohayon/storystore_client.git",
			"path": "/home/ubuntu/store",
			"post-deploy": "NODE_ENV=development npm install && npm run build && $(npm bin)/pm2 startOrRestart package.json --env production"
		}
	}
}
